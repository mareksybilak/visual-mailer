{
  "name": "visual-mailer",
  "version": "0.1.0",
  "description": "Visual drag-and-drop email builder based on Puck and MJML. Create mail-safe responsive email templates with React.",
  "author": "Marek Sybilak <marek@sybilak.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mareksybilak/visual-mailer.git"
  },
  "homepage": "https://github.com/mareksybilak/visual-mailer#readme",
  "bugs": {
    "url": "https://github.com/mareksybilak/visual-mailer/issues"
  },
  "keywords": [
    "email",
    "email-builder",
    "mjml",
    "puck",
    "drag-and-drop",
    "react",
    "phoenix",
    "liveview",
    "mail-safe",
    "responsive-email"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.cjs",
      "types": "./dist/hooks/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@measured/puck": "^0.17.0",
    "mjml-browser": "^4.15.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.2.0"
  }
}
